<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/english_balloon"
        android:layout_width="126dp"
        android:layout_height="244dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toStartOf="@+id/shapes_balloon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc" />

    <ImageView
        android:id="@+id/color_balloon"
        android:layout_width="113dp"
        android:layout_height="186dp"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/color" />

    <ImageView
        android:id="@+id/urdu_balloon"
        android:layout_width="125dp"
        android:layout_height="222dp"
        android:layout_marginTop="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alif_bey_pay" />

    <ImageView
        android:id="@+id/shapes_balloon"
        android:layout_width="123dp"
        android:layout_height="211dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shapes" />

    <ImageView
        android:id="@+id/balloon_number"
        android:layout_width="122dp"
        android:layout_height="284dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/num_balloon" />

</androidx.constraintlayout.widget.ConstraintLayout>